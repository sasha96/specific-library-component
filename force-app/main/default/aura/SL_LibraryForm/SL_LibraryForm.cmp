<aura:component
    implements="force:lightningQuickActionWithoutHeader,force:hasRecordId, force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome">
    <aura:attribute type="Boolean" name="isStandardPage" default="false" />
    <aura:attribute type="Boolean" name="isMultiSelect" default="true" />
    <aura:attribute type="Boolean" name="isAbleToDelete" default="true" />
    <aura:attribute type="String" name="libraryName" default="Inside Use Only" />
    <aura:attribute type="Boolean" name="isShowUploadButton" default="true" />
    <aura:attribute type="String" name="recordId" />

    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />

    <aura:if isTrue="{!v.isStandardPage}">
        <div style="border: 1px solid black;background-color: white;">
            <c:slLibraryFormForPage recordId="{!v.recordId}" oncloseWindow="{!c.closeModalWindow}"
                isMultiSelect="{!v.isMultiSelect}" isAbleToDelete="{!v.isAbleToDelete}" libraryName="{!v.libraryName}"
                isShowUploadButton="{!v.isShowUploadButton}">
            </c:slLibraryFormForPage>
        </div>
        <aura:set attribute="else">
            <c:slLibraryForm recordId="{!v.recordId}" oncloseWindow="{!c.closeModalWindow}"
                isMultiSelect="{!v.isMultiSelect}" isAbleToDelete="{!v.isAbleToDelete}" libraryName="{!v.libraryName}"
                isShowUploadButton="{!v.isShowUploadButton}">
            </c:slLibraryForm>
        </aura:set>
    </aura:if>
</aura:component>